<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head") %>
  <body>
    <div class="wrapper">
      <%- include("../partials/headerLoggedIn") %>
      <!-- alert -->
      <% if (typeof errors !== 'undefined') { %>
      <div class="mb-6">
        <% errors.forEach(function (error) { %>
        <div class="notification is-danger is-light">
          <button class="delete"></button>
          <%= error.msg %>
        </div>
        <% }); %>
      </div>
      <% } %>
      <!-- END alert -->
      <form action="/post/new" method="post">
        <div class="field">
          <label for="title" class="label">タイトル</label>
          <div class="control">
            <input id="title" name="title" class="input" type="text" />
          </div>
        </div>
        <div class="field">
          <label for="content" class="label">コンテンツ</label>
          <div class="control">
            <textarea id="content" name="content" class="textarea"></textarea>
          </div>
        </div>
        <div class="buttons">
          <button class="button is-info" type="submit">新規投稿</button>
        </div>
      </form>
    </div>
  </body>
</html>
